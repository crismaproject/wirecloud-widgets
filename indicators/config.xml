<?xml version="1.0" encoding="UTF-8"?>

<Template xmlns="http://morfeo-project.org/2007/Template">
  <Catalog.ResourceDescription>
    <Vendor>AIT</Vendor>
    <Name>indicator_charts</Name>
    <DisplayName>Indicators</DisplayName>
    <Version>0.6.1.2</Version>
    <Author>Manuel Warum</Author>
    <Mail>Manuel.Warum.fl@ait.ac.at</Mail>
    <Description>Displays bar charts</Description>
    <Description>
      This widget displays indicator data generated by a remote server.
    </Description>
    <ImageURI>img/catalogue.png</ImageURI>
    <iPhoneImageURI>img/catalogue.png</iPhoneImageURI>
    <WikiURI>http://127.0.0.1/index.htm</WikiURI>
  </Catalog.ResourceDescription>

  <Platform.Preferences>
    <Preference name="wps-uri" type="text" description="URL of the Indicators WPS" label="WPS URI" default="http://localhost/pywps.cgi"/>
    <Preference name="ooiwsr-uri" type="text" description="URI to the OOI-WSR API" label="OOI-WSR API URI" default="http://localhost/api"/>
    <Preference name="primary-src" type="list" description="Where should indicator data be requested from" label="Primary source" default="ooiwsr">
      <Option name="WPS first" value="wps"/>
      <Option name="OOI-WSR first" value="ooiwsr"/>
    </Preference>
  </Platform.Preferences>

  <Platform.Link>
    <XHTML href="index.html"/>
  </Platform.Link>

  <Platform.Rendering width="6" height="12"/>
</Template>